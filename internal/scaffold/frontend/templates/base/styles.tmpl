{{- if eq .CSS "tailwind" }}
@import "tailwindcss";

@theme {
  --color-primary: #00ff95;
  --color-accent: #ff04c9;
}
{{- else }}
body {
  margin: 0;
  font-family: sans-serif;
  background-color: white;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.card {
  background-color: #2d3748; /* Tailwind's gray-800 */
  border: 4px double #d1d5db; /* Tailwind's gray-300 */
  color: white;
  padding: 3rem;
  border-radius: 0.5rem;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  gap: 0.2rem;
  transition: transform 0.6s;
}

.card:hover {
  transform: scale(1.15);
}

.card-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 2rem;
  font-weight: bold;
}

.link {
  text-decoration: underline;
  font-style: italic;
  text-align: center;
  margin-top: 0.75rem;
  margin-left: 1rem;
  font-size: 0.875rem;
  color: white;
}

.subtitle {
  font-size: 1.25rem;
  margin-top: 0.5rem;
}

.highlight {
  color: #00ff95;
}

.accent {
  color: #ff04c9;
}

.code-block {
  background-color: rgba(0, 0, 0, 0.9);
  padding: 1rem;
  border-radius: 0.5rem;
}

{{- end }}